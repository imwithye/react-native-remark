{
  "name": "react-native-remark",
  "version": "0.0.0",
  "description": "Remark for React Native",
  "main": "dist/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imwithye/react-native-remark.git"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "lint": "eslint . --no-warn-ignored",
    "lint:fix": "eslint . --fix",
    "prepare": "npm run build",
    "example:reinstall": "pnpm run build && cd example && rm -rf node_modules/react-native-remark && pnpm install"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react-native",
    "remark",
    "markdown"
  ],
  "author": "Yiwei Gong",
  "license": "MIT",
  "dependencies": {
    "react": "^19.1.0",
    "react-native": "^0.80.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.70.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/mdast": "^4.0.4",
    "@types/react": "^19.1.8",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "prettier": "3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
